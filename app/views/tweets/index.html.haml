.col-xs-3
  .panel.panel-default
    .panel-heading
      Post new tweet
    .panel-body
      = form_for @tweet do |f|
        .form-group
          = f.text_area :content, class: "form-control"
        = f.submit class: "btn btn-default"
.col-xs-9
  - if notice
    .alert.alert-info= notice

  .list-group
    = div_for @tweets, class: "list-group-item" do |tweet|
      %h4
        = tweet.user.name
      %p
        = tweet.content
        = link_to_favorite_or_unfavorite tweet
        = link_to_follow_or_unfollow tweet.user
