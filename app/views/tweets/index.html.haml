.col-xs-3
  .panel.panel-default
    .panel-heading
      Post new tweet
    .panel-body
      = form_for @tweet do |f|
        .form-group
          = f.text_area :content, class: "form-control"
        = f.submit class: "btn btn-default"
.col-xs-9
  - if notice
    .alert.alert-info= notice
  - @tweet.errors.full_messages.each do |message|
    .alert.alert-danger= message

  .list-group
    = render @tweets
