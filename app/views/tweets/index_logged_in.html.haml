.col-xs-3
  .panel.panel-default
    .panel-heading
      = link_to user_path(current_user) do
        = current_user.name
        = render_user_screen_name current_user
    .panel-body
      つぶやき #{current_user.tweets.count}
      フォロー #{current_user.follows.count}
      フォロワー #{current_user.inverse_follows.count}
      = form_for @tweet do |f|
        .form-group
          = f.text_area :content, class: "form-control"
        = f.submit class: "btn btn-default"
.col-xs-9
  - if notice
    .alert.alert-info= notice
  - @tweet.errors.full_messages.each do |message|
    .alert.alert-danger= message

  .list-group
    = render @tweets
